<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Portfolio Alert", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Portfolio Error", sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Portfolio Notice", sticky: false) %>
<% end %>