<div class="container projects-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag project_img(@portfolio_project.main_image.url, 'main'), width: '100%' %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_project.title %></h1>

      <em><%= @portfolio_project.subtitle %></em>

      <p><%= @portfolio_project.body %></p>

      <h2>Technologies used:</h2>
      <% @portfolio_project.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>

      <% if logged_in?(:site_admin) %>
        <div>
          <%= link_to "Edit Item", edit_project_path(@portfolio_project), class: "btn btn-warning" %>
        </div>
      <% end %>
    </div>
  </div>
</div>